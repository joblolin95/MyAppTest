<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/contactListView"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/no_user_logo"
            android:layout_marginBottom="15dp"
            android:id="@+id/contactImgDisplay"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/listView" android:weightSum="1">

        <TextView
                android:id="@+id/nameDisplay"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Name: "
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="15dp"
        />

        <TextView
                android:id="@+id/phoneDisplay"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Phone: "
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
        />
        <TextView
                android:id="@+id/emailDisplay"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Email: "
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
        />
        <TextView
                android:id="@+id/addressDisplay"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Address: "
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"

        />
    </LinearLayout>

</LinearLayout>